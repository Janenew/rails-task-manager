<h1> <%= @task.title %> </h1>


<%= form_with model: @task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
    <%= f.check_box :completed if !@task.new_record? %>
    <%= 'completed' if !@task.new_record? %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>


<%= link_to "<i class=\"glyphicon glyphicon-step-backward\"></i>".html_safe + " Back to list", tasks_path %>

